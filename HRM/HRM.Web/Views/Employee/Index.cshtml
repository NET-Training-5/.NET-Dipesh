@using HRM.Web.ViewModels;
@model List<EmployeeViewModel>

    @{
        ViewData["Title"] = "Employee";
    }

<form class="float-end">
    <input type="text" name = "searchText" placeholder="Type Something" class="w-50 mb-2" />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Gender</th>
            <th>Dob</th>
            <th>Join Date</th>
            <th>DepartmentName</th>
            <th>Designation</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            var profileSrc = string.IsNullOrEmpty(employee.ProfileImagePath) ? "/Images/Perosn.jpg" : employee.ProfileImagePath;
            <tr>
                <td><img class="rounded-circle" src=@profileSrc height="20"/></td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Address</td>
                <td>@employee.Gender</td>
                <td>@employee.Dob?.ToString("MMMM dd, yyyy")</td>
                <td>@employee.JoinDate.ToString("MMMM dd, yyyy")</td>
                <td>@employee.DepartmentName</td>
                <td>@employee.Designation</td>
                <td>
                    <a href="/employee/Edit/@employee.Id"><i class="bi bi-pencil-square text-warning"></i></a>
                </td>
                <td>
                    <a href="/employee/delete/@employee.Id"><i class="bi bi-trash-fill text-danger"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>